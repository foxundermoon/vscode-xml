{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
        "noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
        "removeComments": true,
        "target": "es6"
	},
	
	"exclude": [
		"node_modules"
	]
}